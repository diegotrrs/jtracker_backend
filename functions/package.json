{
  "name": "functions",
  "version": "0.1.0",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "babel src --out-dir dist",
    "serve": "npm run build && firebase serve --only functions:api",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "npm run shell",
    "test": "jest tests/doer/*.test.js",
    "deploy": "firebase deploy --only functions:api",
    "logs": "firebase functions:log",
    "deployFunctions": "firebase deploy --only functions:api",
    "freeze:patch": "npm run version:patch && npm run push:develop",
    "freeze:minor": "npm run version:minor && npm run push:develop",
    "freeze:major": "npm run version:major && npm run push:develop",
    "version": "npm run release --commit-all",
    "version:patch": "npm run release -- --release-as patch",
    "version:minor": "npm run release -- --release-as minor",
    "version:major": "npm run release -- --release-as major",
    "release": "standard-version",
    "push:develop": "git push --follow-tags origin develop"
  },
  "main": "dist/index.js",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.3",
    "cors": "^2.8.4",
    "cron": "^1.3.0",
    "express": "^4.16.3",
    "firebase-admin": "~5.13.0",
    "firebase-functions": "^1.1.0",
    "google-auth-library": "^1.4.0",
    "googleapis": "^28.1.0",
    "moment": "^2.22.2",
    "node-fetch": "^2.1.2",
    "node-rest-client": "^3.1.0",
    "numeral": "^2.0.6",
    "standard-version": "^4.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "babel-eslint": "^8.2.2",
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "jest": "^22.4.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "^2.10.0",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1"
  },
  "private": true
}
